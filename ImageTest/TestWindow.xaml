<Window x:Class="ImageTest.TestWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageTest"
            xmlns:img="clr-namespace:ImageDisplayLib;assembly=ImageDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Name="TemperatureBlock" HorizontalAlignment="Stretch"/>
            <TextBlock Name="StatusBlock" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <img:ImageDisplay Name="ImageHandle" IsSamplingEnabled="True" ImageName="Test Image" Grid.Column="1"/>
    </Grid>
</Window>
