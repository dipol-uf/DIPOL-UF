<Window x:Class="DIPOL_UF.Views.AvailableCameraViewexaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIPOL_UF.Views"
        mc:Ignorable="d"
        Style="{StaticResource ResourceKey=ContentFont}"
        Title="Available Cameras" Height="auto" Width="300" WindowStyle="ToolWindow" SizeToContent="Height" Topmost="True" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Found:" 
               BorderBrush="{StaticResource ResourceKey=BorderColor}"
               BorderThickness="{StaticResource ResourceKey=BottomOnlyBorderThickness}"/>

        <ListView DockPanel.Dock="Top" BorderThickness="0" Style="{StaticResource ResourceKey=ListViewStyle}"
                  Height="300">
            <ListViewItem>1</ListViewItem>
            <ListViewItem>2</ListViewItem>
        </ListView>
        <Border DockPanel.Dock="Top" VerticalAlignment="Bottom" 
                Style="{StaticResource ResourceKey=BorderStyle}"
                BorderThickness="{StaticResource ResourceKey=TopOnlyBorderThickness}">
            
            <DockPanel>
                <Button Content="OK" DockPanel.Dock="Left"
                        Style="{StaticResource ResourceKey=PositiveEffectButtonStyle}" HorizontalAlignment="Left"/>
                <Button Content="Cancel" DockPanel.Dock="Right"
                        Style="{StaticResource ResourceKey=NegativeEffectButtonStyle}" HorizontalAlignment="Right"/>
            </DockPanel>
        </Border>
    </DockPanel>
</Window>
